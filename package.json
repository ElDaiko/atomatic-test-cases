{
  "name": "qa-aut",
  "productName": "QA Generator",
  "description": "Una aplicación para generar casos de prueba automáticamente a partir de historias de usuario",
  "version": "1.0.0",
  "author": "Miguel Roldan",
  "main": "main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "npm run build && electron .",
    "dist": "npm run build && electron-builder --win --config.compression=maximum",
    "dist-win": "npm run build && electron-builder --win",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-linux": "npm run build && electron-builder --linux",
    "clean": "rimraf dist dist-electron electron-cache node_modules/.cache"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "rimraf": "^6.0.1",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.qa-aut.test-generator",
    "productName": "QA Generator",
    "forceCodeSigning": false,
    "publish": null,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false,
      "forceCodeSigning": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-mac.${ext}",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-linux.${ext}",
      "category": "Development"
    },
    "portable": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "compression": "maximum",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "locales",
        "to": "locales",
        "filter": [
          "en-US.pak",
          "es.pak"
        ]
      }
    ]
  }
}
